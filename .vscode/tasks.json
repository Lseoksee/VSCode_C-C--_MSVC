{
    "tasks": [
        {
            "label": "Create Dir",
            "type": "shell",
            "command": "mkdir bin/${relativeFileDirname} -Force",
            "group": "build",
            "detail": "Create Dir"
        },
        {
            "label": "Build cl.exe",
            "type": "shell",
            "command": "cl",
            "args": [
                "/EHsc",
                "/nologo",
                "/source-charset:utf-8",
                "/Fe:",
                "${workspaceFolder}/bin/${relativeFileDirname}/${fileBasenameNoExtension}.exe",
                "${file}",
                "/Fo:",
                "${workspaceFolder}/bin/${relativeFileDirname}/${fileBasenameNoExtension}.obj",
                "/I",
                "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.40.33807/include",
                "/I",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.22621.0/um",
                "/I",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.22621.0/ucrt",
                "/link",
                "/LIBPATH:C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.40.33807/lib/onecore/x64",
                "/LIBPATH:C:/Program Files (x86)/Windows Kits/10/Lib/10.0.22621.0/um/x64",
                "/LIBPATH:C:/Program Files (x86)/Windows Kits/10/Lib/10.0.22621.0/ucrt/x64"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            
            "detail": "Build EXE"
        },
        {
            "label": "Run Build",
            "dependsOrder": "sequence",
            "dependsOn": ["Create Dir", "Build cl.exe"],
        }
    ],
    "version": "2.0.0"
}
